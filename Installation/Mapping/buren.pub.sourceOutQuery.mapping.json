{
  "title": "pub.sourceOutQuery",
  "$id": "https://buren.nl/mapping/buren.pub.sourceOutQuery.mapping.json",
  "$schema": "https://docs.commongateway.nl/schemas/Mapping.schema.json",
  "version": "0.0.1",
  "passTrough": true,
  "mapping": {
    "limit": "_limit",
    "orderby": "date",
    "order": "{% if _order.modified is defined %}{{ _order.modified }}{% else %}desc{% endif %}",
    "openpub-type": "type",
    "openpub-audience": "audience"
  },
  "unset": [
    "_limit",
    "_order",
    "type",
    "audience",
    "embedded&#46;acf&#46;publicationEndDate"
  ],
  "cast": {
    "limit": "unsetIfValue==_limit",
    "openpub-type": "unsetIfValue==embedded&#46;acf&#46;publicationType.int_compare"
  }
}